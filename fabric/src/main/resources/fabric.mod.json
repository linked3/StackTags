{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",
  "name": "StackTags",
  "description": "Adds item tags that set exact max stack sizes (1, 2, 4, 8, 16, 32, 64). Items in these tags will stack to the specified size across all supported loaders.",
  "authors": ["linkedto"],
  "contact": {
    "homepage": "https://github.com/linked3/",
    "sources": "https://github.com/linked3/StackTags"
  },
  "license": "GPL-3.0-or-later",
  "icon": "assets/stacktags/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "net.linked.StackTags.fabric.StackTagsFabric"
      }
    ]
  },
  "mixins": ["stacktags.mixins.json", "stacktags-common.mixins.json"],
  "depends": {
    "fabric": "*",
    "minecraft": ">=${minecraft_version}",
    "architectury": ">=${architectury_version}",
    "fabric-language-kotlin": ">=${fabric_kotlin_version}"
  }
}
