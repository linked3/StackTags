{
  "_comment": "https://github.com/QuiltMC/rfcs/blob/main/specification/0002-quilt.mod.json.md",
  "schema_version": 1,
  "mixin": [
    "stacktags.mixins.json",
    "stacktags-common.mixins.json"
  ],
  "quilt_loader": {
    "metadata": {
      "name": "StackTags",
      "description": "Adds item tags that set exact max stack sizes (1, 2, 4, 8, 16, 32, 64). Items in these tags will stack to the specified size across all supported loaders.",
      "license": "GPL-3.0-or-later",
      "icon": "assets/stacktags/icon.png",
      "authors": ["linkedto"],
      "contact": {
        "sources": "https://github.com/linked3/StackTags"
      }
    },
    "group": "${group}",
    "id": "${mod_id}",
    "version": "${version}",
    "intermediate_mappings": "net.fabricmc:intermediary",
    "entrypoints": {
      "init": [
        {
          "adapter": "kotlin",
          "value": "net.linked.StackTags.quilt.StackTagsQuilt"
        }
      ]
    },
    "depends": [
      {
        "id": "quilt_loader",
        "version": "*"
      },
      {
        "id": "quilt_base",
        "version": "*"
      },
      {
        "id": "minecraft",
        "version": ">=${minecraft_version}"
      },
      {
        "id": "architectury",
        "version": ">=${architectury_version}"
      }
    ]
  },
  "minecraft": {
    "environment": "*"
  }
}